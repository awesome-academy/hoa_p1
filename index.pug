          button.control-prev.slick-prev(type='button')
            img(src='img/previous.PNG', alt='Previous')
          button.control-next.slick-next(type='button')
            img(src='img/next.PNG', alt='Next')
        // end carousel-product-control
      // end carousel-special-product
    // end carousel-product
    section.contact
      // social-link
      .social
          ul.nav
            each index in listIcon
              li.nav__item
                a.nav__link(href='#')
                  span.social__icon
                    i.fab.fa-facebook-f
                  =index
      // end social-link
      .container.clearfix
        // about-us
        .contact__item.about-us
          h3.contact__title
            | Về chúng tôi
          p.header__logo
            a(href='#')
